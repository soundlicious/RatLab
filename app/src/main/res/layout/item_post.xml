<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       tools:parentTag="android.widget.FrameLayout">

    <androidx.cardview.widget.CardView
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/material_card_corner_radius"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardUseCompatPadding="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/material_content_edge_margin_horizontal"
                android:padding="@dimen/material_card_actions_row_padding"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="@dimen/material_app_bar_default_title_text_size"
                    android:textStyle="bold"
                    android:gravity="center"
                    tools:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_post_title"/>
            <TextView
                    tools:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_post_body"/>

            <ImageView
                    android:id="@+id/imageView_post_insert"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_insert_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</merge>